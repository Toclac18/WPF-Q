<Window x:Class="WPF_Q.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Q.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>

        <TextBlock Text="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,50,0,0"/>

        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,100,0,0"/>

        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="150,150,0,0" Click="LoginButton_Click"/>

    </Grid>
</Window>
